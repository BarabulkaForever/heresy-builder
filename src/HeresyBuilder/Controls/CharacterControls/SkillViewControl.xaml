<UserControl x:Class="HeresyBuilder.Controls.CharacterControls.SkillViewControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HeresyBuilder.Controls.CharacterControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="8*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Label Content="{Binding SkillName}" FontSize="14" Grid.Column="0" />
        <CheckBox HorizontalAlignment="Center" IsEnabled="False" Grid.Column="1" IsChecked="{Binding IsLvlOne, Mode=OneWay}" />
        <CheckBox HorizontalAlignment="Center" IsEnabled="False" Grid.Column="2" IsChecked="{Binding IsLvlTwo, Mode=OneWay}" />
        <CheckBox HorizontalAlignment="Center" IsEnabled="False" Grid.Column="3" IsChecked="{Binding IsLvlThree, Mode=OneWay}" />
        <CheckBox HorizontalAlignment="Center" IsEnabled="False" Grid.Column="4" IsChecked="{Binding IsLvlFour, Mode=OneWay}" />
    </Grid>
</UserControl>
